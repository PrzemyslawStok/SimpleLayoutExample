<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/linearLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/linearLayoutButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout 1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutButton2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutButton"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutButton" />

    <Button
        android:id="@+id/linearLayoutButton2"
        android:layout_width="132dp"
        android:layout_height="38dp"
        android:text="Linear Layout 2"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout1"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutButton1"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutButton1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutButton1" />

    <Button
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutButton2"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutButton2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutButton2" />

    <Button
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout1"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout1"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout1" />
</androidx.constraintlayout.widget.ConstraintLayout>